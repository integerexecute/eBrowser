<Page
    x:Class="eBrowser.Windows.Views.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    NavigationCacheMode="Required">

    <StackPanel Margin="12" Spacing="18">

        <TextBlock Text="General" FontSize="20" FontWeight="Bold"/>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
            <TextBlock Text="Username:" VerticalAlignment="Center"/>
            <TextBox Width="200"
                     Text="{Binding Username, Mode=TwoWay}"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Spacing="8">
            <TextBlock Text="API Key:" VerticalAlignment="Center"/>
            <PasswordBox Width="200"
                         Password="{Binding ApiKey, Mode=TwoWay}"/>
        </StackPanel>

        <ToggleSwitch
            x:Name="HideToSysTray"
            Header="Hide to system tray"
            IsOn="{Binding HideToSystemTray, Mode=TwoWay}" 
            Toggled="ToggleSwitch_Toggled"/>

        <ToggleSwitch
            Header="Pause video when window hides"
            Visibility="{Binding HideToSystemTray, Mode=TwoWay}"
            IsOn="{Binding PauseVideoAtHide, Mode=TwoWay}" />

        <ToggleSwitch
            Header="Auto-mute video"
            IsOn="{Binding AutoMuteVideo, Mode=TwoWay}" />

        <ToggleSwitch
            Header="Auto-play video"
            IsOn="{Binding AutoPlayVideo, Mode=TwoWay}" />

        <ToggleSwitch
            Header="Auto-download images"
            IsOn="{Binding AutoDownloadImages, Mode=TwoWay}" />

        <ToggleSwitch
            Header="Auto-download videos"
            IsOn="{Binding AutoDownloadVideos, Mode=TwoWay}" />

        <Button Content="Save Settings"
                HorizontalAlignment="Left"
                Click="SaveButton_Click"/>
    </StackPanel>
</Page>